{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"baseUrl": "./",
		"experimentalDecorators": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"paths": {
		"$styles/*": "src/styles/*",
		"$components/*": "src/components/*",
		"@pages/*": "src/pages/*",
		"@assets/*": "src/assets/*",
		"@layouts/*": "src/layouts/*"
	}
}
