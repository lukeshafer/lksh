---
import ProjectCard from "./ProjectCard.astro";

const projectList = [
	{
		name: "Fridge Magnets",
		image: "assets/fridgemagnets.png",
		link: "https://github.com/lukeshafer/fridgemagnets",
	},
	{
		name: "Off Center",
		image: "assets/offcenter.png",
		link: "https://github.com/lukeshafer/offcenter",
	},
];
---

<section id="projects" tabindex="0">
	<h2>Projects</h2>
	<ul>
		{
			projectList.map((project) => (
				<li style={`--bg: url(${project.image})`}>
					<a href={project.link}>{project.name}</a>
				</li>
			))
		}
	</ul>
</section>

<style>
	#projects {
		display: flex;
		flex-flow: column;
		gap: 1rem;
		align-items: center;
	}

	h2 {
		font-size: 2.25rem;
		font-family: var(--ls-f-display);
		text-align: center;
	}

	ul {
		display: flex;
		overflow-x: scroll;
		gap: 4rem;
		width: 24rem;
	}

	li {
		background-image: var(--bg);
		display: inline-block;
		height: 20rem;
		width: 30rem;
	}

	a {
		display: block;
		width: 100%;
	}
</style>
