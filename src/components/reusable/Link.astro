---
export type Props = {
	href: string;
	caret?: boolean;
	class?: string;
	classList?:
		| string
		| Record<string, boolean>
		| Record<any, any>
		| Iterable<string>
		| Iterable<any>;
};

const { href, caret, class: className, classList } = Astro.props as Props;
---

<a
	class={`${caret ? "before:content-['>_'] before:mr-2" : ""}
	hover:text-sky-800 hover:dark:text-sky-200 inline group ${className}`}
	href={href}
	class:list={classList ? classList : ""}
	rel="prefetch"
	><span
		class="relative after:border-b after:inline-block after:w-0 group-hover:after:w-full after:transition-all after:border-sky-800 dark:after:border-sky-200 dark:after:border-inherit after:absolute after:right-0 after:bottom-0 after:ease-out-cubic inline-block"
		><slot />
	</span>
</a>
