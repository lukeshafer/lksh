---
interface Props {
	date: Date
	class?: string
}

const { date: tempDate, class: className } = Astro.props
const date = new Date(tempDate)
console.log({ date, tempDate })
---

<time datetime={date.toISOString()} class={className ?? ''}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
