---
import Dots from './Dots.astro';

export interface Props {
	theme: string;
}

// @ts-ignore
const { theme } = Astro.props as Props;
---

<div id="bg">
	<Dots size={600} count={7} speed={14} initialSpeed={30} />
	<slot />
</div>
<style>
	@keyframes bg-animate {
		0% {
			background-position: 0% 0%;
		}
		25% {
			background-position: 90% 0%;
		}
		50% {
			background-position: 90% 90%;
		}
		75% {
			background-position: 0% 90%;
		}
		100% {
			background-position: 0% 0%;
		}
	}

	#bg::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		display: block;

		--layer1: radial-gradient(
			circle,
			rgba(118, 29, 191, 0),
			rgba(230, 40, 92, 0)
		);
		--layer2: linear-gradient(
			45deg,
			rgba(210, 90, 72, 1) 0%,
			rgba(204, 44, 40, 1) 35%,
			rgba(194, 17, 69, 1) 50%,
			rgba(194, 11, 131, 1) 65%,
			rgba(178, 09, 171, 1) 80%
		);
		background: var(--layer1), var(--layer2);
		background-size: 300% 300%;
		animation: 60s infinite ease-in-out bg-animate;
		transform: translateZ(-1px) scale(2);
		min-height: 100vh;
		z-index: -2;
	}

	#bg {
		position: relative;
		min-height: 100vh;
		width: 100%;
		transform-style: inherit;
		z-index: -1;

		/* width: 100vw; */
		/* height: 100vh; */

		overflow: hidden;
	}

	#bg > :global(*) {
		z-index: -1;
	}
</style>
