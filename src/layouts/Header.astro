---
import Logo from './Logo.svg.astro'
import Icon from 'astro-icon'
import Link from '../components/Link.astro'

const navLinks = [
	{ name: 'Home', href: '/' },
	{ name: 'Projects', href: '/projects' },
	{ name: 'Blog', href: '/blog' },
	{ name: 'Contact', href: '/contact' },
]

const page = '/' + Astro.url.pathname.split('/')[1]
---

<div class="bg-white dark:bg-black">
	<header
		class="sticky inset-x-0 top-0 z-50 flex grid-flow-dense flex-col items-center justify-between bg-white from-primary-100 to-primary-200 px-4 py-3 dark:bg-primary-800/10 sm:grid sm:grid-cols-4 sm:grid-rows-1">
		<Link noUnderline>
			<a
				href="/"
				class="stroke-primary-800 hover:stroke-primary-600 focus:stroke-primary-600 dark:stroke-primary-100 hover:dark:stroke-primary-400 focus:dark:stroke-primary-400">
				<Logo class="z-10 h-6 w-6 sm:h-8 sm:w-8" />
				<span class="visibly-hidden">Logo</span>
			</a>
		</Link>
		<nav class="col-span-2">
			<ul class="flex max-w-2xl flex-row flex-wrap justify-evenly gap-4">
				{
				navLinks.map(({ name, href }) => (
					<li class={href === page ? 'font-bold' : 'font-light'}>
						<Link>
							<a
								href={href}
								class="text-inherit group whitespace-nowrap font-mono text-sm">
								{name}
							</a>
						</Link>
					</li>
				))
				}
			</ul>
		</nav>
		<ul class="hidden items-center gap-2 justify-self-end sm:flex">
			<li>
				<Link noUnderline>
					<a href="https://linkedin.com/in/lukealanshafer" title="LinkedIn">
						<Icon class="w-5" name="fa-brands:linkedin" />
						<span class="visibly-hidden">LinkedIn</span>
					</a>
				</Link>
			</li>
