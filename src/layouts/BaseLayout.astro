---
// COMPONENTS
import Footer from './Footer.astro'
import Header from './Header.astro'
import { ViewTransitions } from 'astro:transitions'

// FONTS
import '@fontsource-variable/raleway'
import '@fontsource-variable/work-sans'
import '@fontsource-variable/jetbrains-mono'
import '@fontsource/khula'

// STYLES
import '../app.css'

// PROPS
export interface Props {
	title: string
}

const { title } = Astro.props
---

<html
	lang="en"
	style="overflow-x:hidden"
	class="scroll-smooth bg-gray-50 font-body motion-reduce:scroll-auto dark:bg-gray-900">
	<head>
		<meta charset="utf-8" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
		<meta name="msapplication-TileColor" content="#2b5797" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="description"
			content="I'm a software engineer in central Ohio, skilled in JavaScript and TypeScript."
		/>
		<title>{title ? title : 'Luke Shafer'}</title>
		<ViewTransitions />
	</head>
	<body
		class="flex min-h-screen flex-col bg-gray-50 bg-radial-at-bl from-primary-200 to-black to-white bg-fixed text-gray-800 selection:bg-primary-600 selection:text-gray-50 dark:bg-black dark:from-primary-900/30 dark:text-gray-50 selection:dark:bg-primary-400 selection:dark:text-gray-900">
		<Header />
		<div class="flex-1" transition:name="main-site-content">
			<slot />
		</div>
		<Footer />
		<style>
			:global(:root) {
				font-size: clamp(100%, 0.2rem + 1.3vw, 150%);
			}
		</style>
	</body>
</html>
