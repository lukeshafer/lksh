---
import Link from '../components/Link.astro'
---

<div class="bg-white dark:bg-black" transition:name="site-footer">
	<footer
		class="grid w-full justify-items-center gap-8 bg-gray-50 p-12 dark:bg-primary-800/10">
		<ul class="flex flex-wrap justify-center gap-3">
			<li><Link><a href="/blog">Blog</a></Link></li>
			<li><Link><a href="/projects">Projects</a></Link></li>
			<li><Link><a href="https://twitter.com/lksh_dev">Twitter</a></Link></li>
			<li>
				<Link><a rel="me" href="https://hachyderm.io/@lksh">Mastodon</a></Link>
			</li>

			<li><Link><a href="https://github.com/lukeshafer">GitHub</a></Link></li>
			<li>
				<Link>
					<a href="https://linkedin.com/in/lukealanshafer">LinkedIn</a>
				</Link>
			</li>
		</ul>
		<p class="text-gray-500">
			&copy; <span id="footer-year">{new Date().getFullYear()}</span> Luke
			Shafer. Contact me at <a
				class="underline underline-offset-4"
				href="mailto:hello@lukeshafer.com">hello@lukeshafer.com</a
			> for inquiries.
		</p>
	</footer>
</div>

<script>
	const year = document.getElementById('footer-year')
	if (year) year.textContent = new Date().getFullYear().toString()
</script>
